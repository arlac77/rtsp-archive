{
  "name": "rtsp-archive",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin/rtsp-archive-systemd"
  ],
  "module": "src/rtsp-archive-cli.mjs",
  "description": "archive RTSP stream(s) with ffmpeg",
  "keywords": [
    "rtsp",
    "ffmpeg",
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "rtsp-archive": "src/rtsp-archive-cli.mjs",
    "rtsp-archive-systemd": "bin/rtsp-archive-systemd-cli.mjs"
  },
  "scripts": {
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "package": "npm-pkgbuild --npm-dist --npm-modules pkgbuild pacman makepkg"
  },
  "dependencies": {
    "@kronos-integration/service": "^8.3.24",
    "@kronos-integration/service-admin": "^3.0.20",
    "@kronos-integration/service-authenticator": "^1.0.22",
    "@kronos-integration/service-health-check": "^5.0.21",
    "@kronos-integration/service-http": "^10.0.11",
    "@kronos-integration/service-ldap": "^2.1.22",
    "nbonjour": "^3.6.3"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.7.1",
    "c8": "^7.1.0",
    "documentation": "^12.3.0",
    "execa": "^4.0.0",
    "npm-pkgbuild": "^6.11.16",
    "rollup": "^2.6.1",
    "semantic-release": "^17.0.7"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.3.1"
  },
  "engines": {
    "node": ">=13.13.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/rtsp-archive.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/rtsp-archive/issues"
  },
  "homepage": "https://github.com/arlac77/rtsp-archive#readme",
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "backup": "etc/${name}/config.json",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/usr/lib/sysusers.d/${name}.conf": "pacman/sysusers.conf",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=245.4",
      "ffmpeg": ">=4.2.2",
      "nginx-mainline": ">=1.17.10"
    },
    "groups": "home-automation",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/${name}",
    "group": "services",
    "content-provider": {
      "systemd": {
        "units": {
          "${name}": "systemd/${name}*"
        }
      }
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-kronos-app",
      "arlac77/template-github"
    ]
  }
}
