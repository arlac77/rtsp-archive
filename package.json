{
  "name": "rtsp-archive",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/rtsp-archive-cli.mjs",
  "module": "src/rtsp-archive-cli.mjs",
  "description": "archive RTSP stream(s) with ffmpeg",
  "keywords": [
    "rtsp",
    "ffmpeg"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "rtsp-archive": "bin/rtsp-archive"
  },
  "scripts": {
    "cover": "c8 --temp-directory build/coverage ava && c8 report -r lcov --temp-directory build/coverage",
    "docs": "documentation readme src/rtsp-archive-cli.mjs --section=API",
    "lint": "documentation lint src/rtsp-archive-cli.mjs",
    "package": "npm-pkgbuild  --npm-dist --npm-modules -t /data/binaries/arch-linux/packages/{{arch}} pkgbuild pacman makepkg",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "pretest": "rollup -c",
    "test": "ava"
  },
  "dependencies": {
    "commander": "^2.19.0",
    "config-expander": "^10.0.2",
    "nbonjour": "^3.6.3"
  },
  "devDependencies": {
    "ava": "^1.3.1",
    "c8": "^3.4.0",
    "documentation": "^9.3.1",
    "esm": "^3.2.16",
    "execa": "^1.0.0",
    "markdown-doctest": "^0.9.1",
    "npm-pkgbuild": "^5.1.10",
    "rollup": "^1.6.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-executable": "^1.4.4",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "semantic-release": "^15.13.3"
  },
  "engines": {
    "node": ">=10.15.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/rtsp-archive.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/rtsp-archive/issues"
  },
  "homepage": "https://github.com/arlac77/rtsp-archive#readme",
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "files": [
      "tests/*-test.js",
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "extensions": [
      "js",
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  },
  "pacman": {
    "installdir": "/services/${name}",
    "groups": "home-automation",
    "backup": "etc/${name}/config.json",
    "install": "pacman/install.sh",
    "depends": {
      "systemd": ">=241.0",
      "ffmpeg": ">=4.1"
    },
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json"
    }
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  }
}
