{
  "name": "rtsp-archive",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": false
  },
  "description": "archive RTSP stream(s) with ffmpeg",
  "keywords": [
    "ffmpeg",
    "kronos-integration",
    "rtsp",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "rtsp-archive": "src/rtsp-archive-cli.mjs"
  },
  "scripts": {
    "test": "node --run test:ava",
    "test:ava": "ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.79",
    "@kronos-integration/service": "^11.2.8",
    "@kronos-integration/service-admin": "^3.4.73",
    "@kronos-integration/service-authenticator": "^1.6.64",
    "@kronos-integration/service-health": "^5.1.7",
    "@kronos-integration/service-http": "^10.9.28",
    "@kronos-integration/service-ldap": "^4.0.138",
    "nbonjour": "^3.6.3"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/github": "11.0.3",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "ava": "^6.1.3",
    "c8": "^10.0.0",
    "execa": "^9.6.0",
    "mf-hosting": "^2.8.14",
    "npm-pkgbuild": "^18.2.7",
    "semantic-release": "^24.2.4"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.7.3"
  },
  "engines": {
    "node": ">=22.16.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/rtsp-archive.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/rtsp-archive/issues"
  },
  "homepage": "https://github.com/arlac77/rtsp-archive#readme",
  "pkgbuild": {
    "content": {
      "${systemd.unit.dir}${name}.service": "pkg/${name}.service",
      "${tmpfiles.config.dir}${name}.conf": "pkg/tmpfiles.conf",
      "${config.dir}config.json": "config/config.json",
      "${install.dir}": {
        "type": "npm-pack"
      },
      "${install.dir}/node_modules": {
        "type": "node-modules"
      }
    },
    "depdens": [
      "ffmpeg"
    ],
    "kronos": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
