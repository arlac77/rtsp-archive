{
  "name": "rtsp-archive",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/rtsp-archive-cli.mjs",
  "module": "src/rtsp-archive-cli.mjs",
  "description": "archive RTSP stream(s) with ffmpeg",
  "keywords": [
    "rtsp",
    "ffmpeg"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "rtsp-archive": "bin/rtsp-archive"
  },
  "scripts": {
    "cover": "c8 --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/rtsp-archive-cli.mjs --section=API",
    "lint": "documentation lint src/rtsp-archive-cli.mjs",
    "package": "npm-pkgbuild --npm-dist --npm-modules pkgbuild pacman makepkg",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "pretest": "rollup -c",
    "test": "ava"
  },
  "dependencies": {
    "commander": "^2.20.0",
    "config-expander": "^11.0.0",
    "nbonjour": "^3.6.3",
    "remove-sensible-values": "^1.0.0"
  },
  "devDependencies": {
    "@semantic-release/exec": "^3.3.3",
    "ava": "^1.4.1",
    "builtin-modules": "^3.1.0",
    "c8": "^4.1.5",
    "documentation": "^11.0.0",
    "esm": "^3.2.25",
    "execa": "^1.0.0",
    "markdown-doctest": "^0.9.1",
    "npm-pkgbuild": "^6.0.14",
    "rollup": "^1.12.3",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-executable": "^1.4.5",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "semantic-release": "^15.13.14"
  },
  "engines": {
    "node": ">=10.15.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/rtsp-archive.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/rtsp-archive/issues"
  },
  "homepage": "https://github.com/arlac77/rtsp-archive#readme",
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "files": [
      "tests/*-test.js",
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "extensions": [
      "js",
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  },
  "pacman": {
    "installdir": "/services/${name}",
    "groups": "home-automation",
    "backup": "etc/${name}/config.json",
    "install": "pacman/install.sh",
    "depends": {
      "systemd": ">=242.0",
      "ffmpeg": ">=4.1.2"
    },
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json"
    }
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  }
}