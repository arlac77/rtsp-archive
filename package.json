{
  "name": "rtsp-archive",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "archive RTSP stream(s) with ffmpeg",
  "keywords": [
    "ffmpeg",
    "kronos-integration",
    "rtsp",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "rtsp-archive": "./src/rtsp-archive-cli.mjs"
  },
  "scripts": {
    "package": "npm-pkgbuild --npm-dist --npm-modules pkgbuild pacman makepkg",
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.70",
    "@kronos-integration/service": "^10.4.34",
    "@kronos-integration/service-admin": "^3.4.65",
    "@kronos-integration/service-authenticator": "^1.6.42",
    "@kronos-integration/service-health": "^5.0.169",
    "@kronos-integration/service-http": "^10.6.134",
    "@kronos-integration/service-ldap": "^4.0.101",
    "nbonjour": "^3.6.3"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^5.0.1",
    "c8": "^7.3.1",
    "execa": "^6.1.0",
    "npm-pkgbuild": "^10.15.5",
    "semantic-release": "^19.0.5"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.5.6",
    "mf-hosting": "^1.7.3"
  },
  "engines": {
    "node": ">=18.11.0"
  },
  "os": [
    "linux"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/rtsp-archive.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/rtsp-archive/issues"
  },
  "homepage": "https://github.com/arlac77/rtsp-archive#readme",
  "pkgbuild": {
    "content": {
      "${systemd.unit.dir}${name}.service": "pkg/${name}.service",
      "${systemd.unit.dir}${name}.socket": "pkg/${name}.socket",
      "${sysusers.config.dir}${name}.conf": "pkg/sysusers.conf",
      "${tmpfiles.config.dir}${name}.conf": "pkg/tmpfiles.conf",
      "${config.dir}config.json": "config/config.json",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf",
      "${install.dir}": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ]
    },
    "hooks": "pkg/hooks.sh",
    "backup": "${config.dir}config.json"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
